#!/bin/bash

# 0G Galileo Testnet Setup Script
# Faucet: https://faucet.0g.ai/

set -euo pipefail

# Update & install dependencies
sudo apt-get update && sudo apt-get upgrade -y
sudo apt install curl iptables build-essential git wget lz4 jq make cmake gcc nano automake autoconf tmux htop nvme-cli libgbm1 pkg-config libssl-dev libleveldb-dev tar clang bsdmainutils ncdu unzip screen ufw -y

# Install Rust
curl https://sh.rustup.rs -sSf | sh -s -- -y
source "$HOME/.cargo/env"
rustc --version || echo "Rust installation failed"

# Install Go
wget https://go.dev/dl/go1.24.3.linux-amd64.tar.gz
sudo rm -rf /usr/local/go
sudo tar -C /usr/local -xzf go1.24.3.linux-amd64.tar.gz
rm go1.24.3.linux-amd64.tar.gz
echo 'export PATH=$PATH:/usr/local/go/bin' >> ~/.bashrc
source ~/.bashrc

# Clone and build the 0G Storage Node
git clone https://github.com/0glabs/0g-storage-node.git
cd 0g-storage-node
git checkout v1.0.0
git submodule update --init
cargo build --release

# Download fresh config
CONFIG_PATH="$HOME/0g-storage-node/run/config.toml"
rm -rf "$CONFIG_PATH"
mkdir -p "$(dirname "$CONFIG_PATH")"
curl -o "$CONFIG_PATH" https://raw.githubusercontent.com/mohsinsmsn/0gnode/refs/heads/main/config.toml

# Prompt user for private key
exec < /dev/tty
echo ""
echo "ðŸ” Enter your private key (exactly 64 hex characters, without 0x):"
read -e -p "Private Key: " PRIVATE_KEY

while [[ ! "$PRIVATE_KEY" =~ ^[a-fA-F0-9]{64}$ ]]; do
  echo "âŒ Invalid private key. Must be exactly 64 hexadecimal characters with no 0x prefix."
  read -e -p "Please re-enter your private key: " PRIVATE_KEY
done

# Update miner_key in config.toml
if grep -q "^miner_key" "$CONFIG_PATH"; then
  sed -i "s/^miner_key.*/miner_key = \"$PRIVATE_KEY\"/" "$CONFIG_PATH"
else
  echo "miner_key = \"$PRIVATE_KEY\"" >> "$CONFIG_PATH"
fi

echo "âœ… Private key successfully updated in config.toml"

# RPC List
RPC_LIST=(
"https://0g-evm-rpc.zeycanode.com/"
"https://evmrpc-testnet.0g.ai"
"https://0g-testnet-rpc.astrostake.xyz"
"https://lightnode-json-rpc-0g.grandvalleys.com"
"https://0g-galileo-evmrpc.corenodehq.xyz/"
"https://0g.json-rpc.cryptomolot.com/"
"https://0g-evm.maouam.nodelab.my.id/"
"https://0g-evmrpc-galileo.coinsspor.com/"
"https://0g-evmrpc-galileo.komado.xyz/"
"https://0g.galileo.zskw.xyz/"
"https://0g-galileo.shachopra.com/"
"https://0g-galileo-evmrpc2.corenodehq.xyz/"
"http://0g-galileo-evm-rpc.validator247.com/"
"https://evmrpc.vinnodes.com/"
"https://0g-galileo-ferdimanaa.xyz/"
"https://0g-galileo.xzid.xyz/"
)

echo ""
echo "ðŸŒ Available RPC Endpoints (with ping times):"

# Display RPCs with ping
for i in "${!RPC_LIST[@]}"; do
  RPC=${RPC_LIST[$i]}
  DOMAIN=$(echo $RPC | awk -F[/:] '{print $4}')
  PING_RESULT=$(ping -c1 -W1 "$DOMAIN" 2>/dev/null | grep 'time=' | awk -F'time=' '{print $2}' | cut -d' ' -f1)
  if [[ -z "$PING_RESULT" ]]; then
    PING_RESULT="unreachable"
  else
    PING_RESULT="${PING_RESULT}ms"
  fi
  echo "[$i] $RPC (ping: $PING_RESULT)"
done

# Prompt user to select RPC
echo ""
read -p "ðŸ‘‰ Enter the number of the RPC you want to use: " RPC_CHOICE
while ! [[ "$RPC_CHOICE" =~ ^[0-9]+$ && "$RPC_CHOICE" -ge 0 && "$RPC_CHOICE" -lt ${#RPC_LIST[@]} ]]; do
  echo "âŒ Invalid choice. Enter a number between 0 and $((${#RPC_LIST[@]} - 1))"
  read -p "Enter your choice: " RPC_CHOICE
done

CHOSEN_RPC=${RPC_LIST[$RPC_CHOICE]}
echo "âœ… You selected: $CHOSEN_RPC"

# Update blockchain_rpc_endpoint in config.toml
if grep -q "^blockchain_rpc_endpoint" "$CONFIG_PATH"; then
  sed -i "s|^blockchain_rpc_endpoint.*|blockchain_rpc_endpoint = \"$CHOSEN_RPC\"|" "$CONFIG_PATH"
else
  echo "blockchain_rpc_endpoint = \"$CHOSEN_RPC\"" >> "$CONFIG_PATH"
fi

echo "âœ… RPC endpoint successfully updated in config.toml"

# Create systemd service
sudo tee /etc/systemd/system/zgs.service > /dev/null <<EOF
[Unit]
Description=ZGS Node
After=network.target

[Service]
User=$USER
WorkingDirectory=$HOME/0g-storage-node/run
ExecStart=$HOME/0g-storage-node/target/release/zgs_node --config $HOME/0g-storage-node/run/config.toml
Restart=on-failure
RestartSec=10
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
EOF

# Enable and start the service
sudo systemctl daemon-reload
sudo systemctl enable zgs
sudo systemctl start zgs

echo ""
echo "ðŸš€ ZGS Node has been installed and started successfully!"
